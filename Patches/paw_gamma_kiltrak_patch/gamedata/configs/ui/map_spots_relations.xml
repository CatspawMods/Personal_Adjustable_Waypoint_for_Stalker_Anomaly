<!-- ======================================================================
	Personal Adjustable Waypoint
	Author: Catspaw (CatspawMods @ ModDB)
	Version: 1.6
	Updated: 20230605
	Merge for compatibility with Ishmaeel's Kill Tracker / GAMMA
===========================================================================
	To merge Personal Adjustable Waypoint with any mod that alters the map_spots_relations.xml file, add the following include to your copy 
	of the file:
========================================================================-->
#include "ui\map_spots_paw.xml"
<!-- ======================================================================
	If you do not do this, the game will fail and it will suck.
========================================================================-->

	<enemy_location hint="enemy" no_offline="1">
		<mini_map  spot="enemy_mini_spot"/>
	</enemy_location>

	<neutral_location hint="neutral">
		<mini_map  spot="neutral_mini_spot"/>
	</neutral_location>

	<friend_location hint="friend">
		<mini_map  spot="friend_mini_spot"/>
	</friend_location>

	<deadbody_location hint="disable_hint">
		<level_map spot="deadbody_pda_spot"/>
		<mini_map  spot="deadbody_mini_spot"/>
	</deadbody_location>

	<enemy_mini_spot width="0" height="0" stretch="1" alignment="c" >
		<texture r="255" g="0" b="0">ui_mmap_common_actor</texture>
	</enemy_mini_spot>

	<neutral_mini_spot width="7" height="7" stretch="1" alignment="c">
		<texture r="255" g="200" b="0">ui_mmap_common_actor</texture>
	</neutral_mini_spot>

	<friend_mini_spot width="7" height="7" stretch="1" alignment="c">
		<texture r="50" g="255" b="0">ui_mmap_common_actor</texture>
	</friend_mini_spot>

	<deadbody_mini_spot width="7" height="7" stretch="1" alignment="c">
		<texture r="50" g="195" b="255">ui_mmap_common_actor</texture>
	</deadbody_mini_spot>

	<deadbody_pda_spot width="7" height="7" stretch="1" alignment="c" location_level="5">
		<texture r="50" g="195" b="255">ui_mmap_common_actor</texture>
	</deadbody_pda_spot>
